@using StoryWriter.Data.Entities
@using Microsoft.AspNetCore.Components

<div class="container">
    <div class="form-group">
        <label for="story" class="form-label">Story</label>
        <select id="story" class="form-control" @onchange="OnStoryChanged">
            <option value="">Select a story...</option>
            @foreach (var story in Stories)
            {
                <option value="@story.Id" selected="@(story.Id == Character.Story.Id)">@story.Title</option>
            }
        </select>
    </div>

    <div class="form-group mb-2">
        <label for="name" class="form-label">Name</label>
        <input id="name" class="form-control" @bind="@Character.Name" placeholder="Character name..." />
    </div>

    <div class="form-group mb-2">
        <label for="description">Description</label>
        <textarea id="description" class="form-control" @bind="@Character.Description"
            placeholder="Character Description..."></textarea>
    </div>
</div>


@code {
    [Parameter]
    public IEnumerable<StoryEntity> Stories { get; set; } = new List<StoryEntity>();
    [Parameter]
    public CharacterEntity Character { get; set; } = new CharacterEntity();
    [Parameter]
    public EventCallback<ChangeEventArgs> OnStoryChanged { get; set; } = default!;
}
